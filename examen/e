numeros =[]
for i in range (10):
    while True:
        entrada=input(f"Ingrese el numero {i+1}:")
        try:
          num = int(entrada)
          break
        except:
         print("Entrada no valida. Ingresa otro numero.")
    numeros.append(num)

print("\nNúmeros en el mismo orden:")
print(" ".join(str(n) for n in numeros))

print("\nNúmeros en el orden inverso:")
print(" ".join(str(n) for n in reversed(numeros)))
